{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dist for pypi",
            "type": "shell",
            "command": [
                    "poetry build",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }            
        },
        {
            "label": "upload to pypi",
            "type": "shell",
            "command": "poetry publish",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "generate docs",
            "type": "shell",
            "command": "pdoc --html gtag gtag.tags --html-dir docs",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Test Coverage",
            "type": "shell",
            "command": "python3 -m pytest --cov-report html --cov=gtag . && google-chrome htmlcov/index.html",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },

